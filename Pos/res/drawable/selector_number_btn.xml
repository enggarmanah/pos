<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/button_pressed"
                android:endColor="@color/button_pressed"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/border_gray" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/button_focused"
                android:endColor="@color/button_focused"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/border_gray" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/button_normal"
                android:endColor="@color/button_normal"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="@color/border_gray" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>