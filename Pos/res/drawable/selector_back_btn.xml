<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/button_back_pressed"
                android:endColor="@color/button_back_pressed"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="@color/border_grey_dark" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/button_back_normal"
                android:endColor="@color/button_back_normal"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="@color/border_dark" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>