<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_menu_pressed"></solid>
            <stroke android:width="0.5dp" android:color="@color/menu_border" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/button_menu_focused"></solid>
            <stroke android:width="0.5dp" android:color="@color/menu_border" />
        </shape>
  	</item>
    <item>
        <shape>
            <solid android:color="@color/button_menu_normal"></solid>
            <stroke android:width="0.5dp" android:color="@color/menu_border" />
        </shape>
	</item>

</selector>