<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#DDD"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/searchPanel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/PopUpDialogHeaderStyle"
            android:text="@string/select_customer" >
        </TextView>

        <EditText
            android:id="@+id/customerSearchText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_blue_light"
            android:gravity="center_vertical|start"
            android:hint="@string/search_customer"
            android:textColorHint="#9397a4"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
        </EditText>
    </LinearLayout>

    <ListView
        android:id="@+id/customerListView"
        style="@style/ListViewStyle"
        android:layout_height="350dp">
    </ListView>

    <TextView
        android:id="@+id/noCustomerText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/dialog_button_background"
        android:gravity="center"
        android:text="@string/no_customer"
        android:textColor="@color/dialog_button_text"
        android:textSize="18sp"
        android:textStyle="bold" >
    </TextView>

</LinearLayout>