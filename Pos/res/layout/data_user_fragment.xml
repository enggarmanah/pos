<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PlainFragmentStyle" >

    <LinearLayout style="@style/FormStyle" >
		
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_N" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_name" />

            <EditText
                android:id="@+id/nameText"
                style="@style/FormInputStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_L" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_login_id" />

            <EditText
                android:id="@+id/userIdText"
                style="@style/FormInputStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_P" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_password" />

            <EditText
                android:id="@+id/passwordText"
                style="@style/FormInputPasswordStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_T" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_type" />

            <Spinner
                android:id="@+id/roleSp"
                style="@style/FormInputListStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_S" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_status" />

            <Spinner
                android:id="@+id/statusSp"
                style="@style/FormInputListStyle" />
        </LinearLayout>
		
        <LinearLayout 
            style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:layout_gravity="top"
                android:text="@string/letter_H"
                android:layout_marginTop="2dp"/>
            
            <TextView
                style="@style/FormTextStyle"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                android:text="@string/field_access_right" />
            
            <LinearLayout
                android:id="@+id/accessRightsPanel"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

</ScrollView>