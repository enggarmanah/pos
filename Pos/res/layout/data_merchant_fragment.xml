<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RightFragmentStyle" >

    <LinearLayout
        style="@style/FormStyle">

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_N" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_name" />

            <EditText
                android:id="@+id/nameText"
                style="@style/FormInputStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_T" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_type" />

            <Spinner
                android:id="@+id/typeSp"
                style="@style/FormInputListStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_A" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_address" />

            <EditText
                android:id="@+id/addressText"
                style="@style/FormInputTextAreaStyle" />
        </LinearLayout>
		
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_T" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_telephone" />

            <EditText
                android:id="@+id/telephoneText"
                style="@style/FormInputPhoneStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_M" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_contact_name" />

            <EditText
                android:id="@+id/contactNameText"
                style="@style/FormInputStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_T" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_contact_telephone" />

            <EditText
                android:id="@+id/contactTelephoneText"
                style="@style/FormInputPhoneStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_L" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_login_id" />

            <EditText
                android:id="@+id/loginIdText"
                style="@style/FormInputStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_P" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_password" />

            <EditText
                android:id="@+id/passwordText"
                style="@style/FormInputPasswordStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_A" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_period_start" />

            <EditText
                android:id="@+id/periodStartDate"
                style="@style/FormInputDateStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_A" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_period_end" />

            <EditText
                android:id="@+id/periodEndDate"
                style="@style/FormInputDateStyle" />
        </LinearLayout>
		
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_P" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_tax_percentage"/>

            <EditText
                android:id="@+id/taxText"
                style="@style/FormInputNumericStyle"
                android:hint="@string/hint_percentage" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_B" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_service_charge_percentage"/>

            <EditText
                android:id="@+id/serviceChargeText"
                style="@style/FormInputNumericStyle"
                android:hint="@string/hint_percentage"/>
        </LinearLayout>
                
        <LinearLayout 
            android:id="@+id/statusPanel"
            style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_S" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_status" />

            <Spinner
                android:id="@+id/statusSp"
                style="@style/FormInputListStyle" />
        </LinearLayout>
        
        <LinearLayout 
            style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                android:text="@string/letter_H" />
            
            <TextView
                style="@style/FormTextStyle"
                android:layout_gravity="top"
                android:layout_marginTop="2dp"
                android:text="@string/field_access_right" />
            
            <LinearLayout
                android:id="@+id/accessRightsPanel"
                android:layout_weight="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>