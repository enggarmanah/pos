<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainActivityStyle"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_blue_light">
	
    <TextView
        android:text="@string/reset_password"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_blue_dark"
        android:singleLine="true"
        android:layout_marginTop="0dp"
        android:padding="0dp"
        android:layout_marginBottom="20dp"/>
    
    <TextView
        android:id="@+id/infoText"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:singleLine="false"
        android:layout_marginTop="0dp"
        android:padding="0dp"
        android:layout_marginBottom="10dp"/>
    
    <EditText
        android:id="@+id/passwordText"
        android:hint="@string/password"
        style="@style/ForgotPasswordTextStyle"
        android:inputType="textPassword"/>
    
    <EditText
        android:id="@+id/passwordConfirmText"
        android:hint="@string/field_password_confirm"
        style="@style/ForgotPasswordTextStyle"
        android:inputType="textPassword"/>
    
    <Button
        android:id="@+id/okBtn"
        android:text="@string/ok"
        style="@style/LoginButtonStyle"
        android:layout_marginTop="30dp"/>
    
</LinearLayout>
