<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RightFragmentStyle" >

    <LinearLayout style="@style/FormStyle" >
		
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_name" />

            <EditText
                android:id="@+id/nameTxt"
                style="@style/FormInputStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_telephone" />

            <EditText
                android:id="@+id/telephoneTxt"
                style="@style/FormInputPhoneStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_address" />

            <EditText
                android:id="@+id/addressTxt"
                style="@style/FormInputStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_pic_name" />

            <EditText
                android:id="@+id/picNameTxt"
                style="@style/FormInputStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_pic_telephone" />

            <EditText
                android:id="@+id/picTelephoneTxt"
                style="@style/FormInputPhoneStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_remarks" />

            <EditText
                android:id="@+id/remarksTxt"
                style="@style/FormInputTextAreaStyle" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>