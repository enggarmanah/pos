<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RightFragmentStyle" >

    <LinearLayout style="@style/FormStyle" >

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_N" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_name" />

            <EditText
                android:id="@+id/nameText"
                style="@style/FormInputStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_T" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_type" />

            <Spinner
                android:id="@+id/typeSp"
                style="@style/FormInputListStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_K" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_group" />

            <Spinner
                android:id="@+id/productGrpSp"
                style="@style/FormInputListStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_H" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_price" />

            <EditText
                android:id="@+id/priceText"
                style="@style/FormInputNumericStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_H" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_cost_price" />

            <EditText
                android:id="@+id/costPriceText"
                style="@style/FormInputNumericStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_B" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_pic_required" />

            <Spinner
                android:id="@+id/picRequiredSp"
                style="@style/FormInputListStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_K" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_commision" />

            <EditText
                android:id="@+id/commisionText"
                style="@style/FormInputNumericStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_H" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_promo_price" />

            <EditText
                android:id="@+id/promoPriceText"
                style="@style/FormInputNumericStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_A" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_promo_start" />

            <EditText
                android:id="@+id/promoStartDate"
                style="@style/FormInputDateStyle" />
        </LinearLayout>

        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_A" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_promo_end" />

            <EditText
                android:id="@+id/promoEndDate"
                style="@style/FormInputDateStyle" />
        </LinearLayout>
		
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_J" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_stock" />

            <EditText
                android:id="@+id/stockText"
                style="@style/FormInputNumericStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_M" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_min_stock" />

            <EditText
                android:id="@+id/minStockText"
                style="@style/FormInputNumericStyle" />
        </LinearLayout>
        
        <LinearLayout style="@style/FormRowStyle" >

            <TextView
                style="@style/FormTextFirstLetterStyle"
                android:text="@string/letter_S" />
            
            <TextView
                style="@style/FormTextStyle"
                android:text="@string/field_status" />

            <Spinner
                android:id="@+id/statusSp"
                style="@style/FormInputListStyle" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>