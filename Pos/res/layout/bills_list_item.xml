<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    style="@style/ListViewRowStyle">
	
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <TextView
	        android:id="@+id/nameTxt"
	        style="@style/ListViewRowInventoryNameTextStyle"/>
	   	<TextView
	        android:id="@+id/remarksTxt"
	        style="@style/ListViewRowInventoryRemarksTextStyle"/>
	   	<TextView
	        android:id="@+id/supplierTxt"
	        style="@style/ListViewRowBillsSupplierTextStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">
	   	<TextView
	        android:id="@+id/billDate"
	        style="@style/ListViewRowInventoryDeliveryDateTextStyle"/>
	    <TextView
	        android:id="@+id/billAmountTxt"
	        style="@style/ListViewRowBillsAmountTextStyle"/>
    </LinearLayout>

</LinearLayout>