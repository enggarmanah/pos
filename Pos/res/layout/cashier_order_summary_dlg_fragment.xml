<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        style="@style/PopUpDialogHeaderStyle"
        android:text="@string/order_summary" />
	
    <FrameLayout
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:background="@color/background">
    </FrameLayout>
    
	<LinearLayout style="@style/PaymentSummaryRowStyle" >

        <TextView
            android:id="@+id/orderTypeText"
            style="@style/PaymentSummaryRowValueStyle"
            android:gravity="start"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/customerPanel"
        style="@style/PaymentSummaryRowStyle" >

        <TextView
            android:id="@+id/orderReferenceLabel"
            style="@style/PaymentSummaryRowLabelStyle"
            android:text="@string/order_info" />

        <TextView
            android:id="@+id/orderReferenceText"
            style="@style/PaymentSummaryRowValueStyle" />
    </LinearLayout>

    <TextView style="@style/SectionDividerStyle"/>
    
    <FrameLayout
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:background="@color/background">
    </FrameLayout>

    <LinearLayout style="@style/CashierNumberRowStyle" >

        <Button
            android:id="@+id/okBtn"
            style="@style/OkCancelButtonStyle"
            android:text="@string/ok" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#AAA" />

        <Button
            android:id="@+id/cancelBtn"
            style="@style/OkCancelButtonStyle"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>