<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainActivityStyle"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_blue_light">
	
    <TextView
        android:text="@string/forgot_password"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_blue_dark"
        android:singleLine="true"
        android:layout_marginTop="15dp"
        android:padding="0dp"
        android:layout_marginBottom="20dp"/>
    
    <EditText
        android:id="@+id/loginIdText"
        android:hint="@string/field_login_id"
        style="@style/RegistrationTextStyle"
        android:textStyle="bold"/>
    
    <Button
        android:id="@+id/okBtn"
        android:text="@string/ok"
        style="@style/LoginButtonStyle"
        android:layout_marginTop="30dp"/>
    
</LinearLayout>
