
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MainActivityStyle"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_blue_light">

    <TextView
        android:text="@string/login_merchant"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/auth_title"
        android:textStyle="bold"
        android:textColor="@color/text_blue_dark"
        android:singleLine="true"
        android:padding="0dp"
        android:layout_marginBottom="20dp"/>
    
    <EditText
        android:id="@+id/loginIdText"
        android:hint="@string/merchant_id"
        android:layout_height="wrap_content"
        android:layout_width="305dp"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/auth_text"
        android:textStyle="bold"
        android:textColor="@color/input_text"
        android:singleLine="true"
        android:padding="10dp"/>
    
    <EditText
        android:id="@+id/passwordText"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_width="305dp"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/auth_text"
        android:textStyle="bold"
        android:textColor="@color/input_text"
        android:singleLine="true"
        android:padding="10dp"/>
    
    <Button
        android:id="@+id/loginBtn"
        android:text="@string/ok"
        style="@style/LoginButtonStyle"
        android:layout_marginTop="30dp"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:paddingTop="30dp">
    	
        <TextView
            android:id="@+id/signUpText"
	        android:text="@string/sign_up"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:fontFamily="sans-serif-condensed"
        	android:textSize="@dimen/auth_sub_title"
	        android:textStyle="bold"
	        android:textColor="@color/text_blue_dark"
	        android:singleLine="true"/>
        
        <TextView
	        android:text="@string/separator"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:fontFamily="sans-serif-condensed"
        	android:textSize="@dimen/auth_sub_title"
	        android:textStyle="bold"
	        android:textColor="@color/text_blue_dark"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:singleLine="true"/>
        
        <TextView
			android:id="@+id/forgotPasswordText"
	        android:text="@string/forgot_password"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:fontFamily="sans-serif-condensed"
        	android:textSize="@dimen/auth_sub_title"
	        android:textStyle="bold"
	        android:textColor="@color/text_blue_dark"
	        android:singleLine="true"/>
        
    </LinearLayout>
    
</LinearLayout>
