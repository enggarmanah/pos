<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@color/background_blue_dark"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            style="@style/PopUpDialogHeaderStyle"
            android:layout_width="fill_parent"
            android:gravity="start|center_vertical"
            android:text="@string/menu_change_password"/>
    </LinearLayout>

    <LinearLayout
        style="@style/FormRowStyle" >

        <TextView
            style="@style/FormTextFirstLetterStyle"
            android:text="@string/field_password_fl" />

        <TextView
            style="@style/FormTextStyle"
            android:text="@string/field_password"/>

        <EditText
            android:id="@+id/passwordText"
            style="@style/FormInputPasswordStyle" />
    </LinearLayout>
    
    <LinearLayout
        style="@style/FormRowStyle" >

        <TextView
            style="@style/FormTextFirstLetterStyle"
            android:text="@string/field_password_new_fl" />

        <TextView
            style="@style/FormTextStyle"
            android:text="@string/field_password_new"
            android:minHeight="40dp"/>

        <EditText
            android:id="@+id/passwordNewText"
            style="@style/FormInputPasswordStyle"/>
    </LinearLayout>
    
    <LinearLayout
        style="@style/FormRowStyle" >

        <TextView
            style="@style/FormTextFirstLetterStyle"
            android:text="@string/field_password_confirm_fl" />

        <TextView
            style="@style/FormTextStyle"
            android:text="@string/field_password_confirm"
            android:minHeight="40dp"/>

        <EditText
            android:id="@+id/passwordConfirmText"
            style="@style/FormInputPasswordStyle" />
    </LinearLayout>

    <LinearLayout style="@style/CashierNumberRowStyle"
         android:layout_marginTop="20dp">

        <Button
            android:id="@+id/okBtn"
            style="@style/OkCancelButtonStyle"
            android:text="@string/ok" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="#AAA" />

        <Button
            android:id="@+id/cancelBtn"
            style="@style/OkCancelButtonStyle"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>